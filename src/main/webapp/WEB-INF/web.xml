<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- Should be the first listener, configure jul to slf4j bridge -->
    <listener>
        <listener-class>org.debox.photo.server.SLF4JBridgeConfigurator</listener-class>
    </listener>

    <!-- Should be the second listener, configure shiro with database connection -->
    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>

    <!-- Should be the last listener, initialize the application context -->
    <listener>
        <listener-class>org.debox.photo.server.Initializer</listener-class>
    </listener>
    
    <!-- Shiro filter, for session management -->
    <filter>
        <filter-name>ShiroFilter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>ShiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Not any jessionid in app urls -->
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
        <session-timeout>120</session-timeout>
    </session-config>
</web-app>
