[config]
package.base=org.debox.photo
package.actions=action
package.views=WEB-INF/

[actions]
# Home & single one page
*   /                           FileBrowser.index

# Generate thumbnails
*   /init                       FileBrowser.init

# Used for admin section
GET         /administration                     Administration.getData
PUT,POST    /administration/album               Administration.createAlbum
POST        /administration/configuration       Administration.editConfiguration

# Return media descriptions
*   /api/albums                 FileBrowser.getAlbums
*   /api/album/{album}          FileBrowser.getAlbum
*   /api/photo/{album}/{photo}  FileBrowser.displayPhoto

# Return media streams
*   /thumbnail/{album}/{photo}  FileBrowser.getThumbnail
*   /photo/{album}/{photo}      FileBrowser.getPhoto

