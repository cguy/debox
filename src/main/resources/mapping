[config]
package.base=org.debox.photo
package.actions=action
package.views=WEB-INF/

[actions]
# Home & single one page
*   /                           MediaBrowser.index

# Used for admin section
GET         /administration                     Administration.getData
GET         /administration/sync                Administration.getSyncProgress
PUT,POST    /administration/album               Administration.createAlbum
POST        /administration/configuration       Administration.editConfiguration

# Return media descriptions
*   /api/albums                     MediaBrowser.getAlbums
*   /api/album/{albumName}          MediaBrowser.getAlbum
*   /api/photo/{photoId}            MediaBrowser.displayPhoto

# Return media streams
*   /album/{albumId}/cover          MediaBrowser.getAlbumCover
*   /thumbnail/{photoId}            MediaBrowser.getThumbnail
*   /photo/{photoId}                MediaBrowser.getPhotoStream

